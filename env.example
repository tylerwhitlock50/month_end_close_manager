# Month-End Close Manager - Environment Configuration
# Copy this file to .env and update with your actual values
# Command: cp env.example .env
# NEVER commit .env file to version control!

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://monthend_user:monthend_password@db:5432/monthend_db

# For production, use strong credentials:
# DB_USER=monthend_user
# DB_PASSWORD=<generate-strong-password>
# DB_NAME=monthend_db

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# Secret key for JWT token signing
# CRITICAL: Generate a secure random key for production!
# Generate with: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-this-to-random-64-char-string-in-production

# JWT algorithm and token expiration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application metadata
APP_NAME=Month-End Close Manager
APP_VERSION=1.0.0

# Debug mode - MUST be False in production!
DEBUG=False

# Allowed CORS origins (comma-separated)
# In production, set this to your actual domain(s)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-domain.com

# Frontend API URL (for production builds)
VITE_API_URL=http://localhost:8000

# ==============================================================================
# FILE STORAGE
# ==============================================================================

# Directory for uploaded files (relative or absolute path)
FILE_STORAGE_PATH=./files

# Maximum file upload size in megabytes
MAX_FILE_SIZE_MB=50

# ==============================================================================
# EMAIL NOTIFICATIONS (Optional - leave empty to disable)
# ==============================================================================

# SMTP server configuration
# For Gmail: smtp.gmail.com, port 587
# For Office 365: smtp.office365.com, port 587
# For SendGrid: smtp.sendgrid.net, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# SMTP authentication
# For Gmail, use an "App Password": https://support.google.com/accounts/answer/185833
SMTP_USER=
SMTP_PASSWORD=

# From address for outgoing emails
EMAIL_FROM=noreply@monthend.local

# ==============================================================================
# SLACK INTEGRATION (Optional - leave empty to disable)
# ==============================================================================

# Slack Bot Token
# Create a Slack App: https://api.slack.com/apps
# Add bot token scope: chat:write
SLACK_BOT_TOKEN=

# Default Slack channel for notifications
SLACK_CHANNEL=#finance-close

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================

# Redis connection URL (for Celery task queue)
# Format: redis://[:password]@host:port/db
REDIS_URL=redis://redis:6379/0

# For production with password:
# REDIS_PASSWORD=<generate-strong-password>
# REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ==============================================================================
# TIMEZONE
# ==============================================================================

# Application timezone
# Use IANA timezone names: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/New_York

# ==============================================================================
# PRODUCTION-ONLY SETTINGS
# ==============================================================================

# Database connection pool settings (optional)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# ==============================================================================
# NOTES
# ==============================================================================

# Required for production:
# 1. Set DEBUG=False
# 2. Generate and set a strong SECRET_KEY (32+ characters)
# 3. Use strong database credentials
# 4. Set ALLOWED_ORIGINS to your actual domain
# 5. Configure SMTP if using email notifications
# 6. Configure Slack if using Slack integration
# 7. Use Redis password in production

# Optional but recommended:
# - Setup email notifications for task assignments
# - Setup Slack integration for team visibility
# - Configure timezone to match your organization

# Security checklist:
# ✓ Never commit .env to version control
# ✓ Use strong passwords (16+ characters, mixed case, numbers, symbols)
# ✓ Rotate SECRET_KEY periodically
# ✓ Use HTTPS in production
# ✓ Restrict ALLOWED_ORIGINS to your domain only
# ✓ Keep this file secure with appropriate file permissions (chmod 600 .env)





